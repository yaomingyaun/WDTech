<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.activity.LoginActivity"
    android:background="@mipmap/login_bg">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_150"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        >

        <ImageView
            android:id="@+id/pp"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/login_icon_phone_n"

            />
        <EditText
            android:id="@+id/login_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:layout_marginLeft="@dimen/dp_30"
            android:digits="0123456789"
            android:maxLength="11"
            android:textSize="@dimen/sp_18"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:background="@null"
            />
        <View
         android:layout_below="@id/login_phone_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_10"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_repla2"
        android:layout_marginTop="@dimen/dp_220"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        >
        <ImageView
            android:id="@+id/pq"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/register_icon_lock_n"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <EditText
            android:id="@+id/login_phone_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="登录密码"
            android:password="true"
            android:textColor="#fff"
            android:textSize="@dimen/sp_18"
            android:layout_marginLeft="@dimen/dp_30"
            android:textColorHint="#fff"
            android:background="@null"
            />
        <ImageView
            android:id="@+id/image_eye"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/login_icon_eye_n"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_alignRight="@+id/login_phone_pwd"
            />
        <View
            android:layout_below="@+id/login_phone_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_10"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_repla2"
        android:layout_marginTop="@dimen/dp_10"
        android:text="快速注册"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_30"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_sign"
        android:background="@drawable/login_bth"
        android:layout_marginTop="@dimen/dp_230"
        android:textColor="#ffff"
        android:textSize="@dimen/sp_18"
        android:text="登录"/>
    <LinearLayout
        android:id="@+id/login_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@+id/login"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        >
        <View
            android:layout_below="@+id/login_button"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_1"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:text="第三方账号快速登录"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_weight="1"
            android:gravity="center"
            />
        <View
            android:layout_below="@+id/login_button"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_1"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerVertical="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/login_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/weixin"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/common_icon_weixin_n"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/renlian"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/login_icon_artificial_intelligence_n"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_gravity="center"
            />
    </LinearLayout>
</RelativeLayout>
