<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_margin="@dimen/dp_10"
                android:id="@+id/Communtiy_simple1"
                fresco:roundAsCircle="true"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                />

            <TextView
                android:id="@+id/Communtiy_text1"
                android:text="11111"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/Communtiy_simple1"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Communtiy_text2"
                android:text="时间"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_10"
                android:textColor="#999999"
                android:layout_toRightOf="@id/Communtiy_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/signature"
                android:text="asdasdasdasdasdasdasdsadas"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_10"
                android:textColor="#999999"
                android:layout_below="@id/Communtiy_text2"
                android:layout_toRightOf="@+id/Communtiy_simple1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/Communtiy_text5"
            android:text="1111"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       <android.support.v7.widget.RecyclerView
           android:id="@+id/asdasdasdasdasdas"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
        <LinearLayout
            android:padding="@dimen/dp_10"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Communtiy_image1"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@mipmap/common_tab_message_n"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
            <TextView
                android:id="@+id/Communtiy_text3"
                android:text="1"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/Communtiy_image2"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
            <TextView
                android:id="@+id/Communtiy_text4"
                android:text="1"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/newstextview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/allpl"
                android:layout_margin="@dimen/dp_10"
                android:layout_gravity="center"
                android:text="点击查看更多评论"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout></LinearLayout>
