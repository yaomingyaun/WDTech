<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8D8"
    tools:context=".SettingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#D8D8D8"
        android:layout_height="@dimen/dp_80">
        <ImageView
            android:id="@+id/my_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/common_icon_back_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/my_back"
            android:layout_centerHorizontal="true"
            android:text="设置"
            android:textSize="23sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_2"
        android:background="#BDBDBD"
        />
        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/attention_shape1"
            android:orientation="vertical"
            android:layout_height="@dimen/dp_180">
            <RelativeLayout
                android:id="@+id/my_setting_tou"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_height="@dimen/dp_35">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="头像" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:id="@+id/my_setting_img"
                    app:roundAsCircle="true"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="#A4A4A4"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_setting_name"
                android:layout_width="match_parent"

                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="昵称" />
                <TextView
                    android:id="@+id/my_setting_name_user"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:text="烤面筋" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="#A4A4A4"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_setting_sex"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="性别" />
                <TextView
                    android:id="@+id/my_setting_sex_user"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:text="男" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="#A4A4A4"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_setting_qianming"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="签名" />
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/my_icon_next_n"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="#A4A4A4"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_marginLeft="@dimen/dp_30"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/attention_shape1"
        android:layout_height="@dimen/dp_140">
        <RelativeLayout
            android:id="@+id/my_setting_birthday"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="@dimen/dp_35">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="生日" />
            <TextView
                android:id="@+id/my_setting_birthday_user"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:text="2019-5-14" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#A4A4A4"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_setting_phone"
            android:layout_width="match_parent"

            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="@dimen/dp_35">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="电话" />
            <TextView
                android:id="@+id/my_setting_phone_user"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:text="18301475983" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#A4A4A4"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_setting_Email"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="@dimen/dp_35">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="邮箱" />
            <TextView
                android:id="@+id/my_setting_Email_user"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:text="m18301475983" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#A4A4A4"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:background="@drawable/attention_shape1"
        android:layout_height="@dimen/dp_180">
        <RelativeLayout
            android:id="@+id/my_setting_integral"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="@dimen/dp_35">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="积分" />
            <TextView
                android:id="@+id/my_setting_integral_user"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:text="100" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#A4A4A4"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_setting_VIP"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="@dimen/dp_35">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="VIP" />
            <TextView
                android:id="@+id/my_setting_VIP_user"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:text="是" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#A4A4A4"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_setting_Face"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="@dimen/dp_35">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Fece ID" />
            <TextView
                android:id="@+id/my_setting_Face_user"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:text="点击绑定" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#A4A4A4"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="@dimen/dp_35">
            <TextView
                android:id="@+id/my_setting_out_user"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_alignParentLeft="true"
                android:textColor="#FF4000"
                android:layout_height="wrap_content"
                android:text="退出登录" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="#A4A4A4"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>