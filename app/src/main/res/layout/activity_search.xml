<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_12"
    tools:context=".home.activity.SearchActivity"
    android:background="#fff"
    tools:ignore="MissingDefaultResource">
    <RelativeLayout
        android:id="@+id/film_seach_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_30"
       >
        <EditText
            android:id="@+id/tech_seach_edit"
            android:layout_width="@dimen/dp_285"
            android:layout_height="match_parent"
           android:drawableLeft="@mipmap/common_nav_btn_search_n"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/backgroud_search"
            android:hint="搜索文章"
            android:textSize="@dimen/sp_12"
             />
        <TextView
            android:id="@+id/diss_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tech_seach_edit"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="取消"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hotsearch"
        android:layout_below="@id/film_seach_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        >
    <TextView
        android:id="@+id/ho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="热搜词"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        />
    <com.wd.tech.home.view.HistoryFlowLayout
        android:id="@+id/hotlayout"
        android:layout_below="@+id/ho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.wd.tech.home.view.HistoryFlowLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/show_search"
        android:layout_below="@+id/film_seach_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_30"
        >
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/search_showlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.jcodecraeer.xrecyclerview.XRecyclerView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/none_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/film_seach_relative"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/image_none"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerVertical="true"
            android:src="@mipmap/meiyoushop"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/text_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_none"
            android:text="没有相关资料!!!"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>