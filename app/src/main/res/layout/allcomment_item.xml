<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/comment_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        fresco:roundAsCircle="true"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        fresco:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        fresco:layout_constraintLeft_toRightOf="@+id/comment_image"
        android:layout_marginLeft="10dp"
        android:textColor="#333333"
        fresco:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#999999"
        fresco:layout_constraintLeft_toRightOf="@+id/comment_image"
        android:layout_marginLeft="10dp"
        fresco:layout_constraintTop_toBottomOf="@+id/comment_name"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/comment_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        fresco:layout_constraintLeft_toRightOf="@+id/comment_image"
        android:layout_marginLeft="10dp"
        fresco:layout_constraintTop_toBottomOf="@+id/comment_time"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"
        fresco:layout_constraintTop_toBottomOf="@+id/comment_message"
        android:layout_marginTop="10dp"
        />


</android.support.constraint.ConstraintLayout>