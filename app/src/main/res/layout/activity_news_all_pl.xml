<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.NewsAllPlActivity">

    <RelativeLayout
        android:id="@+id/allpllinear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/pl_back"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_80"
            android:background="@mipmap/common_nav_btn_back_n"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/allpl_icon1"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            app:roundAsCircle="true"
            android:layout_toRightOf="@+id/pl_back"/>
        <TextView
            android:id="@+id/plnickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/allpl_icon1"
            android:textSize="@dimen/sp_18"
            android:text="昵称"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#AAAA"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@+id/allpllinear1"/>

<android.support.v7.widget.RecyclerView
    android:id="@+id/newsallpl_RecyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>



</LinearLayout>