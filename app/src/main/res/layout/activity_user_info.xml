<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".message.activity.UserInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1.5"
        android:background="@mipmap/personal_data_bg">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/userActivity_photo"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/userActivity_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/userActivity_photo"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@id/userActivity_photo"
            android:text="kkdsc"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userActivity_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/userActivity_username"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/userActivity_username"
            android:text="120积分"
            android:textColor="#f00"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userActivity_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="签名" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="----------------------个人资料----------------------" />

            <TextView
                android:id="@+id/userActivity_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:text="性别"
                />

            <TextView
                android:id="@+id/userActivity_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:text="手机号"
                />

            <TextView
                android:id="@+id/userActivity_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:text="邮箱"
                />
            <TextView
                android:id="@+id/userActivity_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:text="TA创建的群"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/userActivity_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_addfriend_button"
                android:text="添加好友"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>