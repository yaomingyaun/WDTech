<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".message.activity.GroupActivity">

    <com.wd.tech.message.view.HeadView
        android:id="@+id/activity_group_head_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
    </com.wd.tech.message.view.HeadView>>

    <FrameLayout
        android:layout_width="@dimen/dp_336"
        android:layout_height="@dimen/dp_32"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/linkman_search"
        android:paddingLeft="@dimen/dp_5">

        <ImageView
            android:id="@+id/activity_group_search_iv"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_gravity="left|center_vertical"
            android:src="@mipmap/common_nav_btn_search_n" />

        <EditText
            android:id="@+id/activity_group_search_ed"
            android:layout_width="@dimen/dp_336"
            android:layout_height="@dimen/dp_32"
            android:background="@null"
            android:hint="请输入想说的话"
            android:layout_marginLeft="@dimen/dp_45"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/activity_group_delete_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:background="@mipmap/common_nav_btn_delete_n"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_below="@id/linkman_linear"
        android:background="#ccc" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_group_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_20">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>