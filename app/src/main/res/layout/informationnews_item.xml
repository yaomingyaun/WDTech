<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleview"
        android:layout_width="140dp"
        android:layout_height="92dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        fresco:roundedCornerRadius="8dp"
        fresco:placeholderImageScaleType="fitCenter"
        />

    <TextView
        android:layout_toRightOf="@+id/simpleview"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="14sp"
        android:textColor="#000"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginRight="12dp"/>

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8e8e8e"
        android:textSize="12sp"
        android:layout_below="@id/title"
        android:layout_toRightOf="@+id/simpleview"
        android:layout_marginTop="9dp"
        android:lines="2"
        android:ellipsize="end"
        android:layout_marginRight="12dp"/>

    <TextView
        android:id="@+id/zuozhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@id/details"
        android:layout_toRightOf="@+id/simpleview"
        android:layout_marginTop="9dp"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@id/zuozhe"
        android:layout_toRightOf="@+id/simpleview"
        android:layout_marginTop="2dp" />

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/details"
        android:layout_marginTop="15dp"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/qiandai"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/qian"
            android:padding="5dp"
            />

        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/shoucang"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="6dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/shoucangshu"
            android:src="@mipmap/common_icon_collect_n"
            android:layout_toLeftOf="@+id/shoucangshu" />
        <ImageView
            android:layout_toLeftOf="@id/fenxiangshu"
            android:id="@+id/fenxiang"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="6dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/common_icon_share_n"/>

        <TextView
            android:id="@+id/fenxiangshu"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="10sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/shoucangshu"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:text="0"
            android:layout_marginRight="5dp"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/fenxiang"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>
