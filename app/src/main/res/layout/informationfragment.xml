<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecd"
    android:orientation="vertical"
    >
   <!-- //android:clipChildren="false"-->

   <RelativeLayout
       android:id="@+id/lin_re"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_24"
       android:layout_marginTop="@dimen/dp_16"
       android:layout_marginBottom="@dimen/dp_14"
       >
       <ImageView
           android:id="@+id/menu_img"
           android:layout_width="@dimen/dp_24"
           android:layout_height="@dimen/dp_24"
           android:src="@mipmap/home_nav_btn_menu_n"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="@dimen/dp_15"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="资讯"
           android:textSize="@dimen/sp_20"
           android:layout_centerHorizontal="true"
           />
       <ImageView
           android:id="@+id/search_img"
           android:layout_width="@dimen/dp_24"
           android:layout_height="@dimen/dp_24"
           android:src="@drawable/fdj"
           android:layout_alignParentRight="true"
           android:layout_marginRight="@dimen/dp_15"
           />
   </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin22"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:orientation="vertical"
                >
                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/viewpager_draw"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_137"
                    app:isClipChildrenMode="true"
                    app:pointsVisibility="false"
                    app:tipTextColor="#fff"
                    app:isShowTips="true"
                    app:tipTextSize="@dimen/sp_12"
                    >
                </com.stx.xhb.xbanner.XBanner>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/informa_xrecycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
